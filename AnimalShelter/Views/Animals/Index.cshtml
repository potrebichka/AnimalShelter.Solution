@{
    Layout = "_Layout";
}
@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;
<h1>Animals:</h1>

@if (Model.Count == 0)
{
    <h3>No animals have been added yet.</h3>
}
<ul>
    @foreach (Animal animal in Model)
    {
        <li class="link">@Html.ActionLink($"{animal.Name}", "Details", new {id = animal.AnimalId})</li>
    }
</ul>

<p class="link">@Html.ActionLink("Add new animal", "Create")</p>
<p class="link">@Html.ActionLink("Add new species", "Create", "Species")</p>
<p class="link">@Html.ActionLink("Home", "Index", "Home")</p>