@{
    Layout = "_Layout";
}
@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Species>;
<h1>Species:</h1>

@if (Model.Count == 0)
{
    <h3>No species have been added yet.</h3>
}
<ul>
    @foreach (Species species in Model)
    {
        <li class="link">@Html.ActionLink($"{species.Type}", "Details", new {id = species.SpeciesId})</li>
    }
</ul>

<p class="link">@Html.ActionLink("Add new species", "Create")</p>
<p class="link">@Html.ActionLink("Home", "Index", "Home")</p>